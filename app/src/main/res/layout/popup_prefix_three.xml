<?xml version="1.0" encoding="utf-8"?>


<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="450dp"
    android:layout_weight="1"
    android:rowCount="3"
    android:columnCount="1"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@drawable/popup_layout_style">

    <Button
        android:id="@+id/content3_1"
        android:tag="6"
        android:layout_rowWeight="1"
        android:layout_gravity="fill_horizontal"
        android:background="@color/white"
        android:text="content 3.1"
        android:layout_row="0"
        android:textSize="24dp"
        android:textAllCaps="false"
        android:onClick="customPopupAction"/>

    <Button
        android:id="@+id/content3_2"
        android:tag="7"
        android:layout_rowWeight="1"
        android:layout_gravity="fill_horizontal"
        android:background="@color/white"
        android:text="content 3.2"
        android:layout_row="1"
        android:textSize="24dp"
        android:textAllCaps="false"
        android:onClick="customPopupAction"/>

    <Button
        android:id="@+id/content3_3"
        android:tag="8"
        android:layout_rowWeight="1"
        android:layout_gravity="fill_horizontal"
        android:background="@color/white"
        android:onClick="customPopupAction"
        android:layout_row="2"
        android:textSize="24dp"
        android:textAllCaps="false"
        android:text="content 3.3" />
</GridLayout>