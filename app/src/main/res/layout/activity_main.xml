<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true" >

    <RelativeLayout

        android:id="@+id/main_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/prefixOne"
                android:layout_width="139dp"
                android:layout_height="176dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:onClick="customPopupPrefix"
                app:srcCompat="@drawable/go_to_button" />

            <ImageView
                android:id="@+id/prefixTwo"
                android:layout_width="139dp"
                android:layout_height="176dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:onClick="customPopupPrefix"
                app:srcCompat="@drawable/i_want_button" />

            <ImageView
                android:id="@+id/prefixThree"
                android:layout_width="139dp"
                android:layout_height="176dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:onClick="customPopupPrefix"
                app:srcCompat="@drawable/i_need_button" />
        </LinearLayout>

        <TextView
            android:id="@+id/messageText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="100"
            android:background="@color/white"
            android:gravity="center"
            android:onClick="closeAction"
            android:text="message"
            android:textSize="50sp"
            android:visibility="invisible" />

    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:paddingTop="20dp"
        app:headerLayout="@layout/header_drawer_menu"
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/white"
        app:itemIconTint="@color/colorPrimaryDark"
        app:itemTextColor="@color/colorPrimaryDark"
        app:menu="@menu/drawer_menu"
        android:fitsSystemWindows="true"/>


</android.support.v4.widget.DrawerLayout>