<?xml version="1.0" encoding="utf-8"?>



<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="230dp"
    android:layout_height="450dp"
    android:layout_weight="1"
    android:rowCount="3"
    android:columnCount="1"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@drawable/popup_layout_style">

    <Button
        android:id="@+id/content2_1"
        android:tag="3"
        android:layout_rowWeight="1"
        android:layout_gravity="fill_horizontal"
        android:layout_row="0"
        android:background="@drawable/button_style"
        style="@style/textButton"
        android:drawableEnd="@drawable/ic_01"
        android:text="@string/content2_1"
        android:layout_marginBottom="40dp"/>

    <Button
        android:id="@+id/content2_2"
        android:tag="4"
        android:layout_rowWeight="1"
        android:layout_gravity="fill_horizontal"
        android:background="@drawable/button_style"
        android:text="@string/content2_2"
        android:layout_row="1"
        android:drawableEnd="@drawable/ic_01"
        style="@style/textButton"
        android:layout_marginBottom="40dp"/>

    <Button
        android:id="@+id/content2_3"
        android:tag="5"
        android:layout_rowWeight="1"
        android:layout_gravity="fill_horizontal"
        android:background="@drawable/button_style"
        android:layout_row="2"
        style="@style/textButton"
        android:drawableEnd="@drawable/ic_01"
        android:text="@string/content2_3"
        android:layout_marginBottom="20dp"/>
</GridLayout>